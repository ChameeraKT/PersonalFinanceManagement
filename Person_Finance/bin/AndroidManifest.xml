<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.person_finance"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.person_finance.MainMenu"
            android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.person_finance.View_Schedule"
            android:label="@string/title_activity_view__schedule" >
        </activity>
        <activity
            android:name="com.example.person_finance.Packages"
            android:label="@string/title_activity_packages" >
        </activity>
        <activity
            android:name="com.example.person_finance.Category"
            android:label="@string/title_activity_category" >
        </activity>
        <activity
            android:name="com.example.person_finance.SubCategory"
            android:label="@string/title_activity_sub_category" >
        </activity>
        <activity
            android:name="com.example.person_finance.Menu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="com.example.person_finance.Add_Schedule"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.person_finance.Allocations"
            android:label="@string/title_activity_allocations" >
        </activity>

        <service
            android:name="com.example.person_finance.AlarmService"
            android:enabled="true" />

        <receiver
            android:name="com.example.person_finance.NotificationPublisher"
            android:process=":remote" />

        <activity
            android:name="com.example.person_finance.Category_main"
            android:label="@string/title_activity_category_main" >
        </activity>
        <activity
            android:name="com.example.person_finance.Category_Expenses"
            android:label="@string/title_activity_category__expenses" >
        </activity>
    </application>

</manifest>
